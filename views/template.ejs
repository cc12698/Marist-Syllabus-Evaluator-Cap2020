    .row{
      margin-right: 0px;
    }
    </style>

  </head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="google" value="notranslate">
  <body>
    <%- include('partials/header'); -%>

    <div class="contain">
      <div class="col-sm-offset-3">
        <p id="create-label">CREATE A SYLLABUS</p>
        <p id="description">Fill in the Information and at the End PDF and Word Doc Syllabi Will Download</p>
      </div>


        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;">
            <h4>Your name:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="text" id="name" placeholder="Name" required>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Your course title:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="text" id="courseName" placeholder="Course Title" required>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Your Marist e-mail:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="email" id="insEmail" placeholder="Email" required>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Instructor phone number:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="text" id="insPhone" placeholder="Phone">
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Course Description:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="courseDes" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Pre-requisite:</h4>
            <h6>Still state if there are none</h6>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="preReq" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Attendence Policy:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="attenPol" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Academic Honesty Policy:</h4>
            <h6>Cheating and plagiarism</h6>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="acadHonest" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Grade Determination:</h4>
            <h6>How students will be graded</h6>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="gradeDet" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Assignments:</h4>
            <h6>Overview of the big assignments in the course</h6>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="assignments" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Accommodations & Assesibilty Statement:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="accommod" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Teach Act Disclosure:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="teachAct" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Sources:</h4>
            <h6>Assignments: Term papers, assignment synopses, examinations, etc.</h6>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="biblio" rows="4" cols="50" required></textarea>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Font</h4>

            <input type="radio" id="times" name="font" value="times">
            <label for="times">times</label>
            <input type="radio" id="helvetica" name="font" value="helvetica">
            <label for="helvetica">helvetica</label>
            <input type="radio" id="courier" name="font" value="courier">
            <label for="courier">courier</label>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>logo style</h4>

            <input type="radio" id="circle" name="logo" value="circle">
            <label for="circle">circle</label>
            <input type="radio" id="sport" name="logo" value="sport">
            <label for="sport">sport</label>
<!--              <input type="radio" id="simple" name="logo" value="simple">
            <label for="simple">simple</label> -->
          </div>
        </div>

        <div class="col-sm-offset-3">
          <button onclick="createPDF()" class=button>Download as PDF</button>
          <button onclick="createWord()" class=button>Download as Docx</button>
        </div>


      </div>

    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/jquery.matchHeight.js" type="text/javascript"></script>
    <script src="js/template.js" type="text/javascript"></script>
  </body>
</html>
