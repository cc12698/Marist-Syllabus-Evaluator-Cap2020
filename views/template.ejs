<!DOCTYPE html>
<html>
  <head>
    <!-- <link rel="stylesheet" href="/css/signin.css"> -->
    <link rel="stylesheet" href="/css/template.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script
      src="https://code.jquery.com/jquery-3.3.1.js"
      integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
      crossorigin="anonymous">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <!-- <script src="https://unpkg.com/jsdocx"></script> -->
    <script src="https://unpkg.com/docx@5.0.2/build/index.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/1.3.8/FileSaver.js"></script>

    <style media="screen">
    .row{
      margin-right: 0px;
    }
    </style>

  </head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="google" value="notranslate">
  <body>
    <%- include('partials/header'); -%>

    <div class="contain">
      <div class="col-sm-offset-3">
        <p id="create-label">CREATE A SYLLABUS</p>
        <p id="description">Fill in the Information and at the End PDF and Docx Syllabi Will Download</p>
      </div>


        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;">
            <h4>Your name:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="text" id="name" placeholder="Name" required>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Your course title:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="text" id="courseName" placeholder="Course Title" required>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Your Marist e-mail:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="email" id="insEmail" placeholder="Email" required>
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#E0DEDE;" margin: auto;>
            <h4>Instructor phone number:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <input type="text" id="insPhone" placeholder="Phone">
          </div>
        </div>

        <div class="row form-row" style="margin-right: 0px">
          <div class="col-sm-3 col-sm-offset-3 col-xs-12" style="background-color:#EEEEEE;" margin: auto;>
            <h4>Course Description:</h4>
          </div>
          <div class="col-sm-3 col-xs-12" style="background-color:#FFFFFF;">
            <textarea id="courseDes" rows="4" cols="50" required></textarea>
          </div>
        </div>


        <div class="col-sm-offset-3">
          <button onclick="createPDF()" class=button>Download as PDF</button>
          <button onclick="createWord()" class=button>Download as Docx</button>
        </div>


      </div>

    <script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="js/jquery.matchHeight.js" type="text/javascript"></script>
    <script src="js/template.js" type="text/javascript"></script>
  </body>
</html>
